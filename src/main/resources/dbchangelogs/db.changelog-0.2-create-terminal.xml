<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    
    <changeSet author="thieme@synyx.de" id="create-terminal">
        <comment>Create table for terminals</comment>

        <createTable tableName="Terminal">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="DECIMAL(15,10)">
                <constraints nullable="false" />
            </column>
            <column name="longitude" type="DECIMAL(15,10)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createIndex indexName="idx_terminal_1" tableName="Seaport" unique="false">
            <column name="enabled" />
        </createIndex>

    </changeSet>

</databaseChangeLog>