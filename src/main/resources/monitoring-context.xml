<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:aop="http://www.springframework.org/schema/aop"
         xmlns:context="http://www.springframework.org/schema/context"
         xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
         http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
         http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">

    <aop:aspectj-autoproxy/>
    <context:component-scan base-package="net.contargo.iris.monitoring"/>

    <bean name="performanceStats" class="net.contargo.iris.monitoring.PerformanceStats">
        <constructor-arg name="statsdHost" value="${statsd.host}"/>
        <constructor-arg name="statsdPort" value="${statsd.port}"/>
        <constructor-arg name="environment" value="${environment:dev}"/>
        <constructor-arg name="userAuthenticationService" ref="userAuthenticationService"/>
    </bean>

</beans>